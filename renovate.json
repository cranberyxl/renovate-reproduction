{
  "extends": ["config:base"],
  "npmrc": "@teamexos:registry=https://npm.pkg.github.com/",
  "schedule": ["every weekend"],
  "labels": ["dependencies"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "devDependencies",
      "semanticCommitType": "chore",
      "automerge": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "dependencies",
      "semanticCommitType": "fix"
    },
    {
      "matchPackagePatterns": ["^@graphql-codegen/"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "graphqlcodegenDependencies",
      "semanticCommitType": "chore"
    },
    {
      "matchPackagePatterns": ["^@swc/"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "swcDependencies",
      "semanticCommitType": "chore"
    },
    {
      "extends": "monorepo:aws-cdk",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "cdkDependencies",
      "semanticCommitType": "chore"
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "typescript",
      "semanticCommitType": "chore"
    },
    {
      "matchPackageNames": ["pg"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "pg",
      "semanticCommitType": "chore"
    },
    {
      "matchPackageNames": ["node-fetch"],
      "allowedVersions": "< 3.0.0"
    }
  ]
}
